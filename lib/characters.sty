\newcommand\Derived[2]{\noindent
\begin{tikzpicture}
\node[chamfered rectangle, draw, thick, inner sep=0mm, chamfered rectangle corners={south west, south east}] (named) {
\tikz\node[
label={[chamfered rectangle, draw, fill=bgred, thick, inner sep=0mm, chamfered rectangle corners={south west, south east}, font=\sffamily\color{white}, minimum height=4mm, minimum width=17mm]above: \uppercase{#1}}] (inner) {\bfseries\Large #2};
};
\node[below=-0.2em of named, font=\tiny](labels) {\hspace{.5em}\uppercase{\phantom{melee\qquad ranged}}};
\end{tikzpicture}
}

\newcommand\DerivedSplit[5]{\noindent
\begin{tikzpicture}\draw[ultra thick] (inner.north) -- (named.south);
\node[chamfered rectangle, draw, thick, inner sep=0mm, chamfered rectangle corners={south west, south east}] (named) {
\tikz\node[label={[chamfered rectangle, draw, thick, fill=bgred, inner sep=0mm, chamfered rectangle corners={south west, south east}, font=\sffamily\color{white}, minimum height=4mm, minimum width=22mm]above:#1}] (inner) {\Large\bfseries #2\qquad#3};
};
\node[below=-0.2em of named, font=\tiny](labels) {\hspace{.5em}\uppercase{#4 \qquad #5}};
\end{tikzpicture}
}




